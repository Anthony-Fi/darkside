{
  "name": "light-pollution-map",
  "version": "1.0.0",
  "description": "A website for viewing light pollution data similar to lightpollutionmap.info",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "gen:viirs": "node process-geotiff.js",
    "gen:viirs:0-6": "node process-geotiff.js --minZoom 0 --maxZoom 6",
    "gen:viirs:0-8": "node process-geotiff.js --minZoom 0 --maxZoom 8"
  },
  "dependencies": {
    "express": "^4.18.2",
    "sharp": "^0.32.5",
    "cors": "^2.8.5",
    "geotiff": "^2.0.7",
    "proj4": "^2.9.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  },
  "keywords": [
    "light-pollution",
    "map",
    "viirs",
    "leaflet"
  ],
  "author": "Aurora Night Project",
  "license": "MIT"
}
